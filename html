    <div class="section">
        <h2>Papa</h2>
        <textarea id="amigo1" placeholder="Escribe tus deseos"></textarea>
    </div>

    <div class="section">
        <h2>Mama</h2>
        <textarea id="amigo2" placeholder="Escribe tus Posibles Regalos aquí..."></textarea>
    </div>

    <div class="section">
        <h2>Lala</h2>
        <textarea id="amigo3" placeholder="Escribe tus Posibles Regalos aquí..."></textarea>
    </div>

    <div class="section">
        <h2>Aaron</h2>
        <textarea id="amigo4" placeholder="Escribe tus Posibles Regalos aquí..."></textarea>
    </div>

    <script>
        // Función para guardar el texto en localStorage
        function guardarDeseos(id) {
            const texto = document.getElementById(id).value;
            localStorage.setItem(id, texto);
        }

        // Función para cargar el texto de localStorage
        function cargarDeseos(id) {
            const texto = localStorage.getItem(id);
            if (texto) {
                document.getElementById(id).value = texto;
            }
        }

        // Asignar eventos de guardado y cargar al inicio
        document.addEventListener("DOMContentLoaded", () => {
            // Cargar los deseos guardados para cada amigo
            ["amigo1", "amigo2", "amigo3", "amigo4"].forEach(id => {
                cargarDeseos(id);
                document.getElementById(id).addEventListener("input", () => guardarDeseos(id));
            });
        });
    </script>

